<a href="/playlists">Back to Home</a>
{{#if playlist}}
<h1>{{playlist.title}}</h1>
<h2>{{ playlist.description }}</h2>
{{#each playlist.videos}}
    <iframe width='420' height='315' src='{{ this }}'></iframe>
{{/each}}
<p><a href='/playlists/{{ playlist._id }}/edit'>Edit</a></p>
<p>
    <form method='POST' action='/playlists/{{ playlist._id }}/delete'>
    <button type='submit'>Delete</button>
    </form>
</p>

{{> comment_form }}

{{/if}}

{{#if comments}}
    <h3>Comments: </h3>
    {{#each comments}}
        <h3>{{this.title}}</h3>
        <h4>{{this.content}}</h4>
        <p>
        <form method='POST' action='/playlists/comments/{{ this._id }}'>
            <button type='submit'>Delete</button>
        </form>
        </p>
    {{/each}}
{{/if}}